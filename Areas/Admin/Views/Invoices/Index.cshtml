@model IEnumerable<SHOPTV.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}
<div class="content">
    <style>
        .text {
            color: white;
            font-size: 20px;
        }</style>
    <h1>Quản Lý Hóa Đơn </h1>

<p>
        <a asp-action="Create" class="text">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
                <th>Các Chức Năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text">Thông Tin Chi Tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>