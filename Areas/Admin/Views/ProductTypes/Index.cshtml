@model IEnumerable<SHOPTV.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}
<div class="content">
<h1>Quản Lý Loại Sản Phẩm </h1>
    <style>
        .text {
            color: white;
            font-size: 20px;
        }</style>

<p>
        <a asp-action="Create" class="text">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Các Chức Năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text">Thông Tin Chi Tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>