@model IEnumerable<SHOPTV.Models.Product>

@{
    ViewData["Title"] = "Search";
}

@if (Model != null)
{
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Danh Sách Tìm Kiếm</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            @foreach (var item in Model){
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <a asp-area="" asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id">
                            <img class="img-fluid w-100" src="~/img/product/@item.Image" alt="">
                        </a>
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@Html.DisplayFor(modelItem => item.Name)</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@Html.DisplayFor(modelItem => item.Price) (VNĐ)</h6><h6 class="text-muted ml-2"><del>$123.00</del></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        <a asp-area="" asp-controller="Carts" asp-action="Add" asp-route-ProductId="@item.Id" asp-route-Quantity="1" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
}
